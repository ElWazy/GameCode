<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsumosActivity">

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView4"
      android:layout_width="328dp"
      android:layout_height="276dp"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="25dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.626"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="334dp"
        android:layout_height="271dp">

      <TextView
          android:id="@+id/textView6"
          android:layout_width="313dp"
          android:layout_height="89dp"
          android:layout_marginTop="8dp"
          android:text="@string/tarjeta_bronce_2500_clp_n_tarjeta_plata_5000_clp_n_tarjeta_de_oro_12000_clp_n_tarjeta_platino_25000_clp"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView4" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="246dp"
          android:layout_height="27dp"
          android:layout_marginTop="16dp"
          android:text="@string/tarjetas_de_regalos"
          android:textAlignment="center"
          android:textColor="#F80606"
          android:textSize="20sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.394"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="308dp"
          android:layout_height="117dp"
          android:layout_marginTop="16dp"
          android:text="@string/bienvenido_a_la_secci_n_de_tarjetas_de_regalo_donde_podr_s_escoger_y_comprar_entre_las_tarjetas_de_regalo_disponibles_para_luego_cajearlas_en_tu_plataforma_de_videojuegos_favorita"
          android:textAlignment="textStart"
          android:textColor="#000000"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.489"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="325dp"
      android:layout_height="358dp"
      android:layout_marginTop="32dp"
      app:cardCornerRadius="25dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.604"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cardView4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="312dp"
        android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/linearLayout"
          android:layout_width="306dp"
          android:layout_height="55dp"
          android:layout_marginTop="16dp"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.092"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="236dp"
            android:layout_height="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/txtnumber"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck" />

      </LinearLayout>

      <TextView
          android:id="@+id/txtresumen"
          android:layout_width="283dp"
          android:layout_height="58dp"
          android:layout_marginTop="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.673"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

      <RatingBar
          android:id="@+id/ratingBar"
          android:layout_width="198dp"
          android:layout_height="51dp"
          android:layout_marginTop="12dp"
          android:numStars="4"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/txtresumen"
          tools:ignore="SpeakableTextPresentCheck" />

      <LinearLayout
          android:layout_width="210dp"
          android:layout_height="101dp"
          android:layout_marginTop="12dp"
          android:orientation="vertical"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ratingBar">

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E82424"
            android:text="@string/calcular"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E82424"
            android:minHeight="48dp"
            android:text="@string/comprar"
            app:cornerRadius="25dp" />
      </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>